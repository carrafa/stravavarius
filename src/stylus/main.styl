@require 'imports/variables'

body
  font-family Helvetica
  background-color $bg-dark
  color $main-font-color 
  margin 0
  padding 0

ul
  list-style none
  margin 0
  padding 0

header
  height 3vh
  background-color lighten($bg-dark, 50%)
  padding 0.5vh 0.5vw
  .profile
    position relative
    display inline-block
    width 20%
    img
      width 3vh
      height 3vh
      display inline-block
    .name
      margin-left 10px
      display inline-block
  nav
    text-align right
    position relative
    display inline-block
    width 80%
    a
      margin-right 1em
    a:last-child
      margin-right none

#content
  margin 1vh 1vw 0 1vw
  .panel
    height 96vh
    position relative
    display inline-block
    overflow scroll
    .left
      width 30%
    .right
      width 70%

#map
  height 96vh
  width 80vw
  margin-left 1vw

.activity
  width 100%
  height 100px
  border-radius 10px
  background-color $bg-light
  margin 10px 0
  cursor pointer
  .controls
    a 
      display block
